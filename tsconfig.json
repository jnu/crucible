{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "noEmit": false,
        "incremental": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "data": ["data/"]
        }
    },
    "include": ["src/**/*", "global.d.ts"],
    "exclude": ["node_modules"]
}
